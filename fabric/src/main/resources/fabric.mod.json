    "client": [ "dev.lazurite.rayon.impl.fabric.RayonFabric" ]
  },

  "depends": {
    "minecraft": ">=1.18",
    "fabricloader": ">=0.12"
  },

  "custom": {
    "modmenu": {
      "badges": [ "library" ],
