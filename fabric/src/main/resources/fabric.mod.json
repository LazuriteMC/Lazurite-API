{
  "schemaVersion": 1,
  "id": "rayon",
  "version": "${version}",

  "name": "Rayon",
  "description": "A physics API for Minecraft.",
  "authors": [ "The Lazurite Team" ],
  "contact": {
    "homepage": "https://lazurite.dev",
    "sources": "https://github.com/lazuritemc/rayon",
    "issues": "https://github.com/lazuritemc/rayon/issues"
  },

  "license": "MIT",
  "environment": "*",
  "icon": "icon.png",
  "mixins": [ "rayon.mixins.json", "toolbox.mixins.json" ],

  "entrypoints": {
